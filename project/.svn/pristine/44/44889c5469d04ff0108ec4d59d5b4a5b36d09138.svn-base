.start-button {
    width: 180px;
    height: 80px;
    margin-top: 100px;
    font-size: 2em;
    font-weight: bold;
    color: white;
    border-radius: 10%;
    background-color: #4B946A;
}

/* End of homepage */

/* Start of Registration Page */
#registration-page {
    position: absolute;
    left: 0px;
    right: 0px;
    top: 0px;
    bottom: 0px;
    height: 100%;
    width: 100%;
    align-items: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    visibility: hidden;
}

.registration-page-title {
    position: relative;
    margin-top: 10%;
    text-align: center;
    font-size: 3rem;
    color: blueviolet;
}

.registration-form {
    width: 85%;
    height: 300px;
    margin-top: 10%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.nickname-form {
    width: 100%;
}

label {
    font-size: 20px;
}

.input-field {
    border: 1px solid black;
    background-color: lightgrey;
    width: 100%;
    height: 40px;
    margin-top: 5px;
    margin-bottom: 10px;
    align-self: center;
    font-size: 20px;
}

.options {
    margin-top: 5%;
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.submit-button {
    /* position: relative; */
    /* margin-top: 20%; */
    margin-top: 50px;
    width: 120px;
    height: 50px;
    font-size: 100%;
}

/* End of Registration Page */

/* Start of gameroom page */
#gameroom-page {
    height: 100%;
    width: 100%;
    position: absolute;
    top: 0px;
    bottom: 0px;
    left: 0px;
    right: 0px;
    visibility: hidden;
    display: flex;
    flex-direction: column;
    /* justify-content: center; */
    align-items: center;
}



/* .gameroom-page-title{
    margin-top: 40px;
} */
.top-bar {
    margin-top: 10px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    width: 90%;
    height: 50px;
}

.exit-button{
    width: 60px;
    height: 30px;
    background-color: rgb(255, 26, 26);
    color: aliceblue;
    font-weight: bold;
    font-size: 100%;
}

.backpack{
    margin-top: 10px;
    height: 50px;
    width: 90%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    font-size: 20px;
    visibility: hidden;
}

.playground{
    margin-top: 2%;
    height: 50%;
    width: 90%;
    background-color:  #C3E89A;
    position: relative;
}

#bar{
    margin-top: 1%;
    height: 3%;
    width: 90%;
    background-color: #E4E7E1;
}

.time {
    width: 100%;
    height: 99%;
    background-color: cornflowerblue;
}

.controller {
    height: 25%;
    margin-bottom: 1%;
    position: absolute;
    bottom: 10px;
    display: grid;
    grid-template-columns: 60px 60px 60px;
    grid-template-rows: 60px 60px 60px;
    align-items: center; 
    justify-content: center;
    text-align: center;
    justify-items: center;
}

.controller-key {
    border: 1px solid black;
    border-radius: 10%;
    width: 40px;
    height: 40px;
}

.catch-button {
    width: 60px;
    height: 60px;
    background-color: gray;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

#status-check {
    /* border: 1px solid black; */
    background-color: rgb(113, 218, 113);
    width: 60px;
    height: 60px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 90%;
    color: white;
}

.player {
    font-size: 90%;
    word-wrap: break-word;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: absolute;
    left: 0%;
    top: 0%;
    border-radius: 50%;
    width: 10%;
    height: 10%;
}

#paralysed{
    display: none;
    flex-direction: column;
    width: 90%;
    height: 27%;
    justify-content: start;
    margin-top: 2%;
}

#paralysedTimeBar{
    margin-top: 5%;
    height: 10%;
    width: 100%;
    background-color: #E4E7E1;
}