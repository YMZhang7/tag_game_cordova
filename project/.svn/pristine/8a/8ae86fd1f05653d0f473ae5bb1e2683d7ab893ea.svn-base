const goDown = rxjs.of(this_player).pipe(
    rxjs.operators.tap(player => {
        if (player['location_y'] <= 85){
            player['location_y'] += 5;
            players[this_player['index']]['location_y'] += 5;
        } else {
            player['location_y'] = 90;
            players[this_player['index']]['location_y'] = 90;
        }
        document.getElementById(this_player['name']).style.top = player['location_y'] + "%";
        socket.emit('goDown', this_player['index']);
        if (this_player['toChase']){
            var catching = false;
            for (let i = 0; i < players.length; i++){
                if (players[i]['index'] != this_player['index']){
                    if (!players[i]['toChase']){
                        if (canCatch(players[i], players[this_player['index']])){
                            // enable catch button
                            catch_button.style.backgroundColor = "green";
                            catching = true;
                        }
                    }
                }
            }
            if (!catching){
                catch_button.style.backgroundColor = "gray";
            }
        }
    })
);

