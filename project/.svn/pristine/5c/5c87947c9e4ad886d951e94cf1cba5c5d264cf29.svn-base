<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href="css/index.css">
        <meta http-equiv="Content-Security-Policy" content="default-src *; script-src * 'unsafe-eval' 'unsafe-inline'; connect-src *; img-src *; style-src * 'unsafe-inline' ; media-src *"> 
        <meta name='viewport' content='width=device-width, initial-scale=1, user-scalable=no' />
        <script src="https://cdnjs.cloudflare.com/ajax/libs/rxjs/6.1.0/rxjs.umd.js"></script>
        <script src="https://cdn.socket.io/socket.io-1.4.5.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script> 
        <title>Tag Game</title>
    </head>
    <body>
        <div class="app">
            <div id="deviceready">
                <div id="homepage">
                    <h1 class="homepage-title">Tag</h1>
                    <button class="start-button" onclick="startButton()">Start!</button>
                </div>
                <div id="registration-page">
                    <h1 class="registration-page-title">Register Now</h1>
                    <div class="registration-form">
                        <div class="nickname-form">
                            <label for="nickname">Nickname:</label><br>
                            <input type="text" class="input-field" id="nickname" name="nickname" ><br>
                        </div>
                        <label style="margin-top: 10%;">Would you like to chase or hide?</label>
                        <div class="options">
                            <input type="radio" id="chase" name="game-option" value="chase" checked>Chase
                            <input type="radio" id="hide" name="game-option" value="hide" style="margin-left: 25px;">Hide
                        </div>
                        <button class='submit-button' onclick="submitButton()">Submit</button>
                        <div class="manual">
                            <div></div>
                            <div>Players who chase:</div>
                            <div>Players who hide:</div>
                            <div>Level 1</div>
                            <div class="player-chase-level1"></div>
                            <div class="player-hide-level1"></div>
                            <div>Level 2</div>
                            <div class="player-chase-level2"></div>
                            <div class="player-hide-level2"></div>
                            <div>Level 3</div>
                            <div class="player-chase-level3"></div>
                            <div class="player-hide-level3"></div>
                        </div>
                    </div>
                </div>
                <div id="gameroom-page">
                    <!-- <h1 id="player-name" class="gameroom-page-title"></h1> -->
                    <div class="top-bar">
                        <h1 id="level"></h1>
                        <button class="exit-button" onclick="exitButton()" id="exitButton">Exit</button>
                    </div>
                    <div class="backpack" id="backpack">
                        <div id="tools"></div>
                        <button onclick="useTool()">use</button>
                    </div>
                    <div class="playground"></div>
                    <div id="bar"></div>
                    <div class="controller" id="controller">
                        <div></div>
                        <div>
                            <button id="up-key" class="controller-key">▲</button>
                        </div>
                        <div></div>
                        <div>
                            <button id="left-key" class="controller-key">◀︎</button>
                        </div>
                        <div id="centre-button">
                            <button id="catch-button" class="catch-button">CATCH</button>
                            <div id="status-check">safe</div>
                        </div>
                        <div>
                            <button id="right-key" class="controller-key">▶︎</button>
                        </div>
                        <div></div>
                        <div>
                            <button id="down-key" class="controller-key">▼</button>
                        </div>
                        <div></div>
                    </div>
                    <div id="paralysed">
                        <div>Frozen time remaining: </div>
                        <div id="paralysedTimeBar" class="bar">
                            <div class="time" id="paralysedTime"></div>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
        <script src="cordova.js"></script>
        <script src="js/socket.js"></script>
        <script src="js/index.js"></script>
        <script src="js/screens.js"></script>
    </body>
</html>
